<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>


  <main class="container">
    <% if(typeof displayName == 'string' && displayName) { %>
        <li class = "navbar-text"><h6><i class="fas fa-lg fa-user"></i><b> Hi! <%= displayName %></b></h6></li>
        <% } else { %>
          <% } %>
   <div class="jumbotron bg-warning">   
    <div class="row">
        <div class="offset-md-1 col-md-9">
        
            <h1><%= title %></h1>
            
            <br>
            <table class="table table-bordered table-striped table-hover">
                <tr class="d-flex">
                    <% if(typeof displayName == 'string' && displayName) { %>
                    <th class="text-center col-2">Contact Name</th>
                    <th class="text-center col-2">Contact Number</th>
                    <th class="text-center col-4">Email Address</th>
                    <th class="text-center col-2">Update</th>
                    <th class="text-center col-2">Delete</th>
                    <% } else { %>
                    <th class="text-center col-3">Contact Name</th>
                    <th class="text-center col-3">Contact Number</th>
                    <th class="text-center col-6">Email Address</th>
                    <% } %>
                </tr>

                <% for(let count = 0; count < ContactList.length; count++)
                { %>
                    <tr class="d-flex">

                        <% if(typeof displayName == 'string' && displayName) { %>
                        <td class="text-center col-2">
                            <%= ContactList[count].Contact_Name %>
                        </td>
                        <td class="text-center col-2">
                            <%= ContactList[count].Contact_Number %>
                        </td>
                        <td class="text-center col-4">
                            <%= ContactList[count].Email_Address %>
                        </td>
                        <td class="text-center col-2">
                            <a href="/businessContacts/edit/<%= ContactList[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i>Update
                            </a>
                        </td>
                        <td class="text-center col-2">
                        <a href="/businessContacts/delete/<%= ContactList[count]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i>Delete
                        </a>
                        </td>
                        <% } else { %>
                                
                                <td class="text-center col-3">
                                    <%= ContactList[count].Contact_Name %>
                                </td>
                                <td class="text-center col-3">
                                    <%= ContactList[count].Contact_Number %>
                                </td>
                                <td class="text-center col-6">
                                    <%= ContactList[count].Email_Address %>
                                </td>
                        
                        <% } %>
                    </tr>

               <% } %>
            </table>
        </div>
    </div>
    </div>

  </main>


  <%- include ../partials/bottom_nav.ejs %>
 
    <%- include ../partials/footer.ejs %>







