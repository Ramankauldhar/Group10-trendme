<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-8">
        <h1><%= title %></h1>

        <form class="form" method="POST">
            <div class="form-group">
                <label for="Contact_NameTextField">Contact Name</label>
                <input type="text" class="form-control"
                id="Contact_NameTextField"
                placeholder="Enter name of the person to Contact"
                name="Contact_Name" 
                value="<%= contact.Contact_Name %>"
                required>
            </div>

            <div class="form-group">
                <label for="Contact_NumberTextField">Contact Number</label>
                <input type="text" class="form-control"
                id="Contact_NumberTextField"
                placeholder="Enter the Contact Number of the person"
                name="Contact_Number" 
                value="<%= contact.Contact_Number %>"
                required>
            </div>

            <div class="form-group">
                <label for="Email_AddressTextField">Email Address</label>
                <input type="text" class="form-control"
                id="Email_AddressField"
                placeholder="Enter the year of Publication"
                name="Email_Address" 
                value="<%= contact.Email_Address %>"
                required>
            </div>           

            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i>Submit
            </button>
            <a href="/businessContacts" class="btn btn-warning"><i class="fas fa-undo"></i>Cancel</a>

        </form>
        </div>
    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>
 
<%- include ../partials/footer.ejs %>
